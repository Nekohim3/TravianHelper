<Window x:Class="TravianHelper.Utils.MapView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravianHelper.Utils"
        mc:Ignorable="d"
        Title="MapView" Height="450" Width="800">
    <Grid Name="MainGrid" 
          PreviewMouseLeftButtonDown="TreeCanvas_PreviewMouseDown"
          PreviewMouseLeftButtonUp="TreeCanvas_PreviewMouseLeftButtonUp"
          PreviewMouseWheel="MainGrid_PreviewMouseWheel"
          PreviewMouseMove="TreeCanvas_PreviewMouseMove"
          Background="#000">
        <Canvas x:Name="Canvas" Margin="0, 0, 0,0" HorizontalAlignment="Left" Width="0" Height="0" VerticalAlignment="Top">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <MatrixTransform x:Name="CanvasMatrix"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
